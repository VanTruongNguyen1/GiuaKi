<%= form_with model: product, html: { class: "container p-4 bg-light shadow rounded" } do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label fw-bold" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label fw-bold" %>
    <%= form.rich_text_area :description, class: "form-control",style:"height:200px" %>
  </div>

  <div class="mb-3">
    <%= form.label :featured_image, class: "form-label fw-bold" %>
    <%= form.file_field :featured_image, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :inventory_count, class: "form-label fw-bold" %>
    <%= form.number_field :inventory_count, class: "form-control" %>
  </div>

  <div class="d-grid">
    <%= form.submit "Submit", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
