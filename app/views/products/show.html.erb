<div class="container mt-4">
  <%= link_to "Back", products_path, class: "btn btn-secondary mb-3" %>

  <div class="row">
    <div class="col-md-6">
      <% if @product.featured_image.attached? %>
        <%= image_tag @product.featured_image, class: "img-fluid rounded shadow" %>
      <% end %>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <% cache @product do %>
            <h1 class="card-title"><%= @product.name %></h1>
            <p class="card-text"><%= @product.description %></p>
            <p><strong>Inventory count:</strong> <%= @product.inventory_count %></p>
          <% end %>
        </div>
      </div>

      <div class="mt-3">
        <% if authenticated? %>
          <%= link_to "Edit", edit_product_path(@product), class: "btn btn-warning me-2" %>
          <%= button_to "Destroy", @product, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
